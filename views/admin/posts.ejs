      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
           <span class="navbar-toggler-icon"></span>
      </button>
   </div>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav mx-auto ">
        <li class="nav-item ">
          <h2 style="color:aliceblue">Admin Panel<h2>
        </li>
       </ul>
   </div>    
</nav>

<!-- Admin Post -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <form method="POST" onsubmit="return doPost(this);">
          <div class="form-group">
             <label for="title">Title</label>
             <input name="title" class="form-control" placeholder="Enter title here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter title here'"required>
          </div>
          <div class="form-group">
            <label for="subTitle">Sub-title</label>
            <textarea name="subTitle" class="form-control" rows="2" placeholder="Enter sub-title here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter sub-title here'" required></textarea>
         </div>
          <div class="form-group">
             <label for="content">Content</label>
             <textarea name="content" class="form-control" rows="6" placeholder="Enter content here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter content here'"required></textarea>
          </div>
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal-image">Upload Image</button>
          <input type="submit" class="btn btn-info " value="Post">
       </form>
      </div>
      <div class="col-md-2"></div>  
    </div>
  </div>
  <!--Modal for image Upload -->
  <div class="modal" id="modal-image">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Upload Image</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">x
          </button>
        </div>

        <div class="modal-body" >
          <form method="POST" enctype="multipart/form-data" id="image-upload">
             <div class="form-group">
                <input type="file" name="file" class="form-control">
             </div>
             <input type="submit" class="btn btn-success" value="upload">
          </form>
        </div>

      </div>
    </div>
  </div>
<%- include('script') -%>
