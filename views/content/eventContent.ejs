<!doctype html>
<html lang="eng">
  <head>
    <%- include('../partials/header') -%>

  </head>
<body>

<!-- Navigation -->
<%- include('../partials/nav' , {active: "events"},{data}); -%>


<!--================ Banner Area =================-->
<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="banner_content text-center">
        <h2>Recent Events</h2>
        <div class="page_link">
          <a href="#">Home</a>
          <a href="#">Events</a>
        </div>
      </div>
    </div>
  </div>
</section>
   
<!--================event content area=================-->
<section class="blog_area single-post-area p_120 ">
  <div class="container">
      <div class="row d-flex justify-content-center">
          <div class="col-lg-9 posts-list ">
            <div class="single-post row">
              <div class="col-lg-12">
                <div class="feature-img">
                    <img class="img-fluid" src="<%=data.post.image%>" alt="">
                </div>
              </div>
              <div class="col-lg-3  col-md-3">
                 <div class="blog_info text-right">
                    <div class="post_tag">
                        <a href="#">Food,</a>
                        <a class="active" href="#">Technology,</a>
                        <a href="#">Politics,</a>
                        <a href="#">Lifestyle</a>
                    </div>
                    <ul class="blog_meta list">
                        <li>
                            <a href="#">Mark wiens
                                <i class="lnr lnr-user"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">12 Dec, 2017
                                <i class="lnr lnr-calendar-full"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">1.2M Views
                                <i class="lnr lnr-eye"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">06 Comments
                                <i class="lnr lnr-bubble"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="social-links">
                        <li>
                            <a href="#">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-github"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-behance"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                  </div>
                  <div class="col-lg-9 col-md-9 blog_details">
                      <h2><%= data.post.title %></h2>
                      <p class="excert">
                          <%= data.post.content%>
                      </p>
                      
                  </div>
            </div>
            <div class="comment-form">
              <h4>Leave a Reply</h4>
              <form method="POST" onsubmit="return doComment(this);">
                <input type="hidden" name="post_id" id="post_id" value="<%= data.post._id%>"/>
                 <div class="form-group form-inline">
                      <div class="form-group col-lg-6 col-md-6 name">
                          <input type="text" class="form-control" id="name" name="username" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" required>
                      </div>
                 </div>
                  <div class="form-group">
                      <textarea class="form-control mb-10" rows="5" name="comment" placeholder="Type your messege here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your message here'"
                          required=""></textarea>
                  </div>
                  <button type="submit" class="primary-btn submit_btn">Post Comment</button>
              </form>
          </div>
            <div class="comments-area">
              <h4>05 Comments</h4>
              <%if(data.post.comments) { %>
                <% data.post.comments=data.post.comments.reverse();%>
                <% for(var i=0;i< data.post.comments.length;i++) {%>                
                <div class="comment-list">
                  <div id="comments">
                    <div class="single-comment justify-content-between d-flex">
                        <div class="user justify-content-between d-flex">
                            <div class="thumb">
                                <img src="http://placehold.it/50x50" alt="">
                            </div>
                            <div class="desc">
                                <h5>
                                    <a href="#"><%= data.post.comments[i].username%></a>
                                </h5>
                                <p class="date">December 4, 2017 at 3:12 pm </p>
                                <p class="comment">
                                  <%= data.post.comments[i].comment%>
                                </p>
                            </div>
                        </div>
                        <div class="reply-btn">
                            <a href="" class="btn-reply text-uppercase">reply</a>
                        </div>
                    </div>
                  </div>
                </div> 
              <% } %>
            <% } %>
              <!--
                //for future reference
              <div class="comment-list left-padding">
                  <div class="single-comment justify-content-between d-flex">
                      <div class="user justify-content-between d-flex">
                          <div class="thumb">
                              <img src="img/blog/c2.jpg" alt="">
                          </div>
                          <div class="desc">
                              <h5>
                                  <a href="#">Elsie Cunningham</a>
                              </h5>
                              <p class="date">December 4, 2017 at 3:12 pm </p>
                              <p class="comment">
                                  Never say goodbye till the end comes!
                              </p>
                          </div>
                      </div>
                      <div class="reply-btn">
                          <a href="" class="btn-reply text-uppercase">reply</a>
                      </div>
                  </div>
              </div>
              -->
          </div>
          </div>
      </div>  
  </div>
</section>                
 
<!--Footer-->  
<%- include('../partials/footer') -%>


   
    <!--  JavaScript -->
    <%- include('../partials/script') -%>
    <script src="/assets/js/socket.io.js"></script>
    <script src="/assets/controllers/socket-config.js"></script>
    <script src="/assets/controllers/comment.js"></script>

    
    
  </body>    

</html>